{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block title %}RepoCode::Notatki{% endblock %}

{% block body %}
    <div class="container">
        <div class="row margin-bottom-20">
            <div class="col-md-12">
                <h1>Dodawanie notatki</h1>

                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Strona główna</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('note_index') }}">Notatki</a></li>
                    <li class="breadcrumb-item active">Dodawanie notatki</li>
                </ol>
            </div>
        </div>

        <div class="row margin-top-30">
            <div class="col-sm-offset-2 col-sm-8 col-xs-offset-1 col-xs-10">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_widget(form) }}
                </div>
                <div class="form-group">
                    <input class="btn btn-primary pull-right" type="submit" value="Zapisz" />
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
