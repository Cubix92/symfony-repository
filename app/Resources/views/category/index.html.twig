{% extends 'base.html.twig' %}

{% import "partials/macro/table.html.twig" as table %}

{% block title %}RepoCode::Kategorie{% endblock %}

{% block body %}
    <div class="container">

        {% include 'partials/messages.html.twig' %}

        <div class="row">
            <div class="col-md-12">
                <h1>Lista kategorii
                    <a class="btn btn-success pull-right" href="{{ path('category_new') }}">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Dodaj
                    </a>
                </h1>

                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Strona główna</a></li>
                    <li class="breadcrumb-item active">Kategorie</li>
                </ol>
            </div>
        </div>

        {% if categories %}
            <div class="row margin-top-20">
                <div class="col-md-12">
                    <table class="table table-bordred table-striped">
                        <thead>
                            <tr>
                                <th style="width: 80px;">{{ table.sort("Id", "id") }}</th>
                                <th>{{ table.sort("Nazwa", "name") }}</th>
                                <th style="width: 80px;">{{ table.sort("Pozycja", "position") }}</th>
                                <th style="width: 60px;">Szczegóły</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for category in categories %}
                            <tr>
                                <td>{{ category.id }}</td>
                                <td>{{ category.name }}</td>
                                <td>{{ category.position }}</td>
                                <td>
                                    <p data-placement="top" data-toggle="tooltip" title="Notatki">
                                        <a href="{{ path('category_show', { 'id': category.id }) }}" class="btn btn-primary btn-xs" >
                                            <span class="glyphicon glyphicon-eye-open"></span>
                                        </a>
                                    </p>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            {{ table.pagination(page, total) }}
        {% else %}
            <div class="row">
                <div class="col-md-12">
                    <div class="alert alert-info">
                        Żadna kategoria nie została jeszcze dodana.
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
